<resources>

  <!-- Base application theme. -->
  <style name="AppTheme"
      parent="Theme.AppCompat.Light.NoActionBar"/>

  <style name="ActionbarTitleStyle"
      parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">@color/text_icon</item>
    <item name="android:padding">@dimen/spacing_micro</item>
    <item name="android:gravity">center_vertical|left</item>
    <item name="android:textSize">@dimen/text_size_small</item>
  </style>

  <style name="LessonTitleStyle">
    <item name="android:textSize">@dimen/text_size_medium</item>
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:gravity">left</item>
    <item name="android:padding">@dimen/spacing_minor</item>
  </style>

  <style name="ExplanationTextStyle">
    <item name="android:textSize">@dimen/text_size_small</item>
    <item name="android:textColor">@color/secondary_text</item>
    <item name="android:gravity">left</item>
    <item name="android:paddingLeft">@dimen/spacing_minor</item>
    <item name="android:paddingBottom">@dimen/spacing_minor</item>
  </style>

  <style name="EngTextStyle">
    <item name="android:textSize">@dimen/text_size_large</item>
    <item name="android:textColor">@color/text_icon</item>
    <item name="android:gravity">center</item>
    <item name="android:paddingLeft">@dimen/spacing_minor</item>
    <item name="android:paddingRight">@dimen/spacing_minor</item>
  </style>

  <style name="MyanTextStyle">
    <item name="android:textSize">@dimen/text_size_medium</item>
    <item name="android:textColor">@color/text_icon</item>
    <item name="android:gravity">center</item>
    <item name="android:paddingLeft">@dimen/spacing_minor</item>
    <item name="android:paddingRight">@dimen/spacing_minor</item>
    <item name="android:paddingTop">@dimen/spacing_major</item>
  </style>

</resources>
