<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme. -->
  <style name="AppTheme"
      parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:colorPrimary"
        tools:ignore="NewApi">@color/primary
    </item>
    <item name="android:colorPrimaryDark"
        tools:ignore="NewApi">@color/primary_dark
    </item>
    <item name="android:colorAccent"
        tools:ignore="NewApi">@color/accent
    </item>
    <!-- Customize your theme here. -->
  </style>

  <style name="LessonTitleStyle">
    <item name="android:textSize">@dimen/text_size_medium</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:gravity">left</item>
    <item name="android:padding">@dimen/spacing_minor</item>
  </style>

  <style name="ExplanationTextStyle">
    <item name="android:textSize">@dimen/text_size_small</item>
    <item name="android:textColor">@color/secondary_text</item>
    <item name="android:gravity">left</item>
    <item name="android:paddingLeft">@dimen/spacing_minor</item>
    <item name="android:paddingBottom">@dimen/spacing_minor</item>
  </style>

</resources>
